{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Publish, Launch, and Attach Debugger",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "publish",
            "program": "~/${workspaceFolderBasename}/GrowIoT",
            "cwd": "~/${workspaceFolderBasename}",
            "stopAtEntry": false,
            "console": "internalConsole",            
            "windows": {
                "pipeTransport": {
                    "pipeCwd": "${workspaceRoot}",
                    "pipeProgram": "plink",
                    "pipeArgs": [
                        "-ssh",
                        "-pw",
                        "123456Qq@",
                        "pi@raspberrypi.local"
                    ],
                    "debuggerPath": "~/vsdbg/vsdbg"
                }
            }
        }
    ],
    "compounds": [
        {
          "name": "Full flow",
          "configurations": ["Publish, Launch, and Attach Debugger"],
          "preLaunchTask": "build"
        }
      ]
}